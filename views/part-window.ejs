<!doctype html>
<html lang="en">
<%- include('header') -%>
<body>
<%- include('nav') -%>
<% var isEdit = false; %>
<% if(typeof (part) !== 'undefined'){
    var name = part.name;
    var date = part.date;
    isEdit = true;
    //doesnt load part when its edit mode
} %>
<div class="row">
    <div class="col-4 ms-4">
        <h1>
            <% if(isEdit){ %>
                Edit data of your part: <%= name%>
            <% }else{ %>
                Add the data of your new part
            <% } %>
        </h1>
        <form method="POST">
            <div class="mb-3">
                <label for="inputPartName" class="form-label">Part name</label>
                <input  class="form-control" id="name" name="name" value="<%= isEdit ? name : '' %>">
                <div id="partNameHelp" class="form-text">Example: Break fluid</div>
            </div>
            <div class="mb-3">
                <label for="inputDate" class="form-label">Construction date</label>
                <input type="date" class="form-control" id="date" name="date"
                <% if(isEdit){ %>
                       value="<%= moment(date).format('YYYY-MM-DD') %>"
                        <% } %>
                >
                <div id="dateHelp" class="form-text">Date when it has been replaced</div>
            </div>

            <div class="row">
                <div class="col-2"><button type="submit" class="btn btn-primary">Apply</button></div>
                <div class="col-2"><button type="cancel" class="btn btn-primary">Cancel</button></div>
            </div>
        </form>
    </div>
</div>
<%- include('footer') -%>
</body>
</html>