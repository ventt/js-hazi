<%- include('header') -%>
<body>
<%- include('nav') -%>
<%  var isEdit = false; %>
<%if(car !== 'undefined'){
    var manu = car.manufacturer;
    var constDate = car.date;
    var type = car.type;
    var fuelType = car.fuelType;
    var mileage = car.mileage;
    isEdit = true;

}%>
<div class="row">
    <div class="col-4 ms-4">
        <h1>
            <%if(isEdit){%>
            Edit datas of your car
            <%}else{%>
                    Add the datas of your new car
            <%}%>
        </h1>
        <form>
            <div class="mb-3">
                <label for="inputManufacturer" class="form-label"> </label>
                <input  class="form-control" id="inputManufacturer" value="<%= isEdit? manu : ''%>">
                <div id="manufacturerHelp" class="form-text">Example: Volswagen</div>
            </div>
            <div class="mb-3">
                <label for="inputDate" class="form-label">Construction date</label>
                <input type="date" class="form-control" id="inputDate" <%if(isEdit){%> value="<%=moment(constDate).format('YYYY-MM-DD')%>" <%}%>>
                <div id="typeHelp" class="form-text">Date when its made</div>
            </div>
            <div class="mb-3">
                <label for="inputType" class="form-label">Type</label>
                <input  class="form-control" id="inputType" value="<%= isEdit? type : ''%>">
                <div id="typeHelp" class="form-text">Example: Golf</div>
            </div>
            <div class="mb-3">
                <label for="inputFuelType" class="form-label">Fuel type</label>
                <select class="form-select" aria-label="Default select example" >
                    <option selected>Select fuel type</option>
                    <option <%if(isEdit){%><%if(fuelType === 'Diesel'){%>selected="selected" <%}%><%}%> value="1">Diesel</option>
                    <option <%if(isEdit){%><%if(fuelType === 'Petrol'){%>selected="selected" <%}%><%}%> value="2">Petrol</option>
                    <option <%if(isEdit){%><%if(fuelType === 'Electric'){%>selected="selected" <%}%><%}%> value="3">Electric</option>
                </select>
                <div id="typeHelp" class="form-text">Electricity is basically a fuel but in an other form</div>
            </div>
            <div class="mb-3">
                <label for="inputMilaega" class="form-label">Mileage</label>
                <input type="number" class="form-control" id="inputManufacturer" value="<%= isEdit? mileage : 0%>">
                <div id="mileagaHelp" class="form-text">In kilometers</div>
            </div>
            <div class="row">
                <div class="col-2"><button type="submit" class="btn btn-primary">Apply</button></div>
                <div class="col-2"><a href="/index" class="btn btn-warning" role="button">Cancel</a></div>
            </div>
        </form>
    </div>
</div>
<%- include('footer') -%>
</body>
</html>